{
    "env": {
      "es2021": true,
      "node": true
    },
    "root": true,
    "extends": [
      "plugin:jsonc/recommended-with-jsonc"
    ],
    "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "plugins": [
      "jsonc"
    ],
    "rules": {
      "indent": [
        "error",
        2
      ],
      "object-property-newline": "error",
      "object-curly-newline": [
        "error",
        {
          "ObjectExpression": {
            "multiline": true,
            "minProperties": 1
          },
          "ObjectPattern": {
            "multiline": true,
            "minProperties": 2
          },
          "ImportDeclaration": {
            "multiline": true,
            "minProperties": 2
          },
          "ExportDeclaration": "always"
        }
      ],
      "object-curly-spacing": [
        "error",
        "always"
      ],
      "array-bracket-newline": [
        "error",
        {
          "minItems": 1
        }
      ],
      "array-element-newline": [
        "error",
        "always"
      ],
      "comma-dangle": [
        "error",
        "always-multiline"
      ],
      "newline-per-chained-call": [
        "error",
        {
          "ignoreChainWithDepth": 2
        }
      ],
      "function-paren-newline": [
        "error",
        "consistent"
      ],
      "function-call-argument-newline": [
        "error",
        "consistent"
      ],
      "quotes": [
        "error",
        "single"
      ],
      "quote-props": [
        "error",
        "consistent"
      ],
      "semi": "error",
      "no-duplicate-imports": "error"
    }
  }
